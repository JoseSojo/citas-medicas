

<div class="card mb-4  w-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-grid-3x3 me-1"></i>
            {{titlePag}}
            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalCreateSchedule">crear</button>
        </div>
        <form class="row">
        </form>
    </div>

    <div class="card-body">
        <table id="" class="table table-sm table-bordered">
            <thead>
                <tr>
                    {{#each labels}}
                        <th class="text-center">{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#if list}}
                    {{#each list}}
                        <tr>
                            <td>
                                {{#if this.primary}}
                                    <span>s√≠</span>
                                {{else}}
                                    <span>no</span>
                                {{/if}}
                                
                            </td>
                            <td>{{this.description}}</td>
                            <td class="d-flex justify-content-center">
                                <a href="/doctor/schedule/{{this.id}}" class="btn btn-primary btn-sm mx-1">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="/doctor/schedule/{{this.id}}" class="btn btn-danger btn-sm mx-1">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                                {{#if this.primary}}
                                {{else}}
                                    <a href="/doctor/schedule/{{this.id}}/primary" class="btn btn-success btn-sm mx-1">
                                        <i class="bi bi-1-circle-fill"></i>
                                    </a>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                {{else}}
                    <p>{{notFoundMessage}}</p>
                {{/if}}

            </tbody>
        </table>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <span></span>
        <ul class="d-flex justify-content-center">
            {{#if foundPrevious}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlPrevious}}">anterior</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
            
            <li class="btn" style="list-style: none;">{{countRender}}</li>

            {{#if foundNext}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlNext}}">siguiente</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
        </ul>
    </div>
</div>
