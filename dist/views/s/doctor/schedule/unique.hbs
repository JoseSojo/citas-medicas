<div class="card">
    <div class="card-body py-0 pt-2 d-flex justify-content-between">
        <h3>{{data.description}}</h3>
        <ul class="d-flex gap-4">
            <li style="list-style: none;">
                <a href="/doctor/schedule" class="btn btn-primary">
                    lista
                    <i class="bi bi-card-list"></i>
                </a>
            </li>
            <li style="list-style: none;">
                <button class="btn btn-primary d-flex gap-2" data-toggle="modal" data-target="#modalCreateAddress">
                    actualizar
                    <i class="bi bi-pen-fill"></i>
                </button>
            </li>
        </ul>
    </div>
</div>

<div class="card mby-3">
    <div class="card-body">
        <ul>
            <li>Propietario: <a href="/user/{{data.user.id}}"><b>{{data.user.name}} {{data.user.lastname}}</b></a> </li>
            {{!-- <li>DÃ­as: <b>{{data._count.detail}}</b></li> --}}
            <li>Citas registradas: <b>{{data._count.quotes}}</b></li>
        </ul>

        <div class="container-fluid">
            <div class="row">
                {{#each data.detail}}
                <div class="col-3 card">
                    <div class="card-header">
                        <h5 class="card-title">{{this.day}}</h5>
                    </div>
                    <form class="card-body container-fluid" method="post" action="/doctor/schedule/detail/{{this.id}}/update">
                        <p>{{data.description}}</p>

                        <div class="row">
                            <span>Entrada</span>
                            <input type="time" value="{{this.time_start}}" class="form-control col" name="time_start" />
                        </div>

                        <div class="row mt-3">
                            <span>Salida</span>
                            <input type="time" value="{{this.time_end}}" class="form-control col" name="time_end" />
                        </div>
                        
                        <div class="row">
                            <button class="col-12 btn btn-primary" type="submit">
                                <i class="bi bi-send-fill"></i>
                                actualizar
                            </button>
                        </div>
                    </form>
                </div>
                {{/each}}
            </div>
        </div>

    </div>
</div>