

<div class="card mb-4  w-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-grid-3x3 me-1"></i>
            {{titlePag}}
        </div>
        {{!-- <form class="row">
            <input type="text" class="form-control col" name="param" value="{{filter.param}}" />
            <button type="submit" class="btn btn-primary col-2">
                <i class="fas fa-search"></i>
            </button>
        </form> --}}
    </div>

    <div class="card-body">
        
                {{#if list}}
                <table id="" class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            {{#each labels}}
                                <th class="text-center">{{this}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                    {{#each list}}
                        <tr>
                            <td>
                                <img src="{{this.icoUrl}}" class="img-fluid" style="width: 25px; height: 25px;" />
                            </td>
                            <td><b>{{this.name}}</b></td>
                            <td>{{this._count.user}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                {{else}}
                    <p>{{notFoundMessage}}</p>
                {{/if}}

            
    </div>

    <div class="card-footer d-flex justify-content-between">
        <span></span>
        <ul class="d-flex justify-content-center">
            {{#if foundPrevious}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlPrevious}}">anterior</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
            
            <li class="btn" style="list-style: none;">{{countRender}}</li>

            {{#if foundNext}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlNext}}">siguiente</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
        </ul>
    </div>
</div>
