
<div class="card mb-4  w-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-grid-3x3 me-1"></i>
            {{titlePag}}
            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalCreateUniversity">crear</button>
        </div>
        <form class="row">
            <input type="text" class="form-control col" name="param" value="{{filter.param}}" />
            <button type="submit" class="btn btn-primary col-2">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <div class="card-body">
            
                {{#if list}}
                    <table id="" class="table table-sm table-bordered">

                    <thead>
                        <tr>
                            {{#each labels}}
                                <th class="text-center">{{this}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this._count.doctors}}</td>
                                <td>{{this._count.user}}</td>
                                <td class="">
                                    {{#each this.withAddress}}
                                        <small>{{this.adressReference.description}}</small>
                                    {{/each}}
                                </td>
                                <td>{{this.createReference.name}} {{this.createReference.lastname}}</td>
                                <td class="d-flex justify-content-center">
                                    <a href="/university/{{this.id}}" class="btn btn-primary btn-sm mx-1">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a href="/university/{{this.id}}" class="btn btn-danger btn-sm mx-1">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p class="lead">{{notFoundMessage}}</p>
                {{/if}}

            
    </div>

    <div class="card-footer d-flex justify-content-between">
        <span></span>
        <ul class="d-flex justify-content-center">
            {{#if foundPrevious}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlPrevious}}">anterior</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
            
            <li class="btn" style="list-style: none;">{{countRender}}</li>

            {{#if foundNext}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlNext}}">siguiente</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
        </ul>
    </div>
</div>
