

<div class="card mb-4  w-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-grid-3x3 me-1"></i>
            {{titlePag}}
        </div>
        <form class="row">
            <select class="form-control col" name="action">
                {{#if filter.action}}
                    <option value="{{filter.value}}" selected>{{filter.action}}</option>
                {{else}}
                    <option value="" selected>Acciones</option>
                {{/if}}
                <option value="create">Creaciones</option>
                <option value="delete">Eliminaciones</option>
                <option value="update">Actualizaciones</option>
                <option value="recovery">Restauraciones</option>
            </select>
            <select class="form-control col" name="entity">
                {{#if filter.entity}}
                    <option value="{{filter.value}}" selected>{{filter.entity}}</option>
                {{else}}
                    <option value="" selected>Entidades</option>
                {{/if}}
                <option value="user">Usuarios</option>
                <option value="university">Universidades</option>
                <option value="speciality">Especialidades</option>
            </select>
            <input type="text" class="form-control col" name="param" placeholder="Buscar" value="{{filter.param}}" />
            <button type="submit" class="btn btn-primary col-2">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <div class="card-body">
        <table id="" class="table table-sm table-bordered">
            <thead>
                <tr>
                    {{#each labels}}
                        <th class="text-center">{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#if list}}
                    {{#each list}}
                        <tr>
                            <td style="font-size: 13px; font-weight: 600;">{{this.createAt}}</td>
                            <td style="font-size: 13px; font-weight: 600;">{{this.description}}</td>
                            <td style="font-size: 13px; font-weight: 600;"><a href="/user/{{this.userReference.id}}">{{this.userReference.name}} {{this.userReference.lastname}}</a></td>
                            <td class="">
                                {{#isHistoryDelete this }}
                                    {{this}}
                                {{/isHistoryDelete}}
                            </td>
                        </tr>
                    {{/each}}
                {{else}}
                    <p>{{notFoundMessage}}</p>
                {{/if}}

            </tbody>
        </table>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <span></span>
        <ul class="d-flex justify-content-center">
            {{#if foundPrevious}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlPrevious}}">anterior</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
            
            <li class="btn" style="list-style: none;">{{countRender}}</li>

            {{#if foundNext}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlNext}}">siguiente</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
        </ul>
    </div>
</div>
