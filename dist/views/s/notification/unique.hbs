<div class="card">
    <div class="card-body py-0 pt-2 d-flex justify-content-between">
        <h3>{{data.subject}}</h3>
        <ul class="d-flex gap-4">
            <li style="list-style: none;">
                <a href="/notification" class="btn btn-primary">
                    lista
                    <i class="bi bi-card-list"></i>
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="card mby-3">
    <div class="card-body">
        <p class="lead">{{data.message}}</p>
    
        <div class="card mt-3">
            <div class="card-body">
                <ul>
                    <li>Desde: <b>{{data.fromReference.name}} {{data.fromReference.lastname}}</b></li>
                    <li>Para: <b>{{data.toReference.name}} {{data.toReference.lastname}}</b></li>
                    {{#if data.read}}
                        <li>Leído: <b>si</b></li>
                    {{else}}
                        <li>Leído: <b>no</b></li>
                    {{/if}}
                    {{#isValid user.id data.toId}}
                        <form action="/notification/{{data.id}}/read" method="post">
                            <button type="submit" class="btn btn-success btn-sm mx-1">
                                <i class="bi bi-eye-fill"> leer</i>  
                            </button>
                        </form>
                    {{/isValid}}
                </ul>
            </div>
        </div>
    </div>
</div>