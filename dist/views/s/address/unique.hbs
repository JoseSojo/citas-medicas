<div class="card">
    <div class="card-body py-0 pt-2 d-flex justify-content-between">
        <h3>{{data.description}}</h3>
        <ul class="d-flex gap-4">
            <li style="list-style: none;">
                <a href="/address" class="btn btn-primary">
                    lista
                    <i class="bi bi-card-list"></i>
                </a>
            </li>
            <li style="list-style: none;">
                <button class="btn btn-primary d-flex gap-2" data-toggle="modal" data-target="#modalCreateAddress">
                    actualizar
                    <i class="bi bi-pen-fill"></i>
                </button>
            </li>
        </ul>
    </div>
</div>

<div class="card mby-3">
    <div class="card-body">
        <ul>
            <li>Usuarios: <b>{{data._count.user}}</b></li>
            <li>Sub direcciones: <b>{{data._count.children}}</b></li>
        </ul>
    
        {{#if data.parentReference}}
        <ul>
            <li>Dirección padre: 
                <a href="/address/{{data.parentReference.id}}">
                    {{data.parentReference.description}}
                </a>
            </li>
        </ul>
        {{/if}}

        {{#if data.children}}
            <h5>Sub direcciones</h5>
            <ul>
                {{#each data.children}}
                <li style="list-style: none;">
                    <a href="/address/{{this.id}}">
                        {{this.description}}
                    </a>
                </li>
                {{/each}}
            </ul>
        {{/if}}

        <form action="/address/create" method="{{form.method}}" class="row">
            <input type="hidden" value="{{data.id}}" name="parentId" />

            <div class="form-floating col-12 mb-3">
                <input class="form-control" name="description" id="address" type="text" placeholder="name@example.com" />
                <label for="matricula">Sub dirección</label>
            </div>

            <div class="d-flex gap-3 justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="{{form.submit.ico}}"></i>
                    {{form.submit.text}}
                </button>
            </div>
        </form>


    </div>
</div>