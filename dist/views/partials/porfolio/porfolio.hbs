
<style>
  /* From Uiverse.io by vinodjangid07 */ 
    .content_main {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: rgb(255, 255, 255);
        padding: 30px 30px 30px 30px;
        box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.062);
        position: relative;
        overflow: hidden;
    }

    .content_main::before {
        position: absolute;
        content: "";
        width: 300px;
        height: 300px;
        background-color: rgba(77, 26, 230, 0.897);
        transform: rotate(45deg);
        left: -180px;
        bottom: 30px;
        z-index: 1;
        border-radius: 30px;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.082);
    }

    .heading {
        font-size: 2em;
        color: #2e2e2e;
        font-weight: 700;
        margin: 5px 0 10px 0;
        z-index: 2;
    }
</style>

<div action="" class="content_main">
    <img src="/{{porfolio.detail.photoReference.path}}" class="" width="150" style="border-radius: 50%;" />
    <p class="heading">Doctor(a) {{porfolio.name}} {{porfolio.lastname}}</p>
    <small>
        {{#if porfolio.addressReference.parentReference}}
            {{porfolio.addressReference.parentReference.description}} -
        {{/if}}
        <b class="lead">{{porfolio.addressReference.description}}</b>
    </small>
    <small>
        {{!-- citas: <b>{{porfolio._count.doctor}}</b> --}}
    </small>
    <div class="text-center" style="width: 70%;">
        {{porfolio.detail.description}}
    </div>

    <div class="row w-100 d-flex justify-content-center gap-3">
        {{#each porfolio.service}}
            <div class="card col-5 col-lg-3">
                <div class="card-body text-center">
                    {{this.name}}
                    <span class="text-success" style="font-weight: bold;">{{this.price}}</span>
                    <p class="text-center w-full">{{this.description}}</p>
                </div>
            </div>
        {{/each}}
    </div>   
    
    <div class="row w-100 d-flex justify-content-center gap-3">
        {{#each porfolio.speciality}}
            <div class="card col-5 col-lg-3">
                <div class="card-body text-center">
                    {{this.specialityReference.name}}
                </div>
            </div>
        {{/each}}
    </div>        

    <div class="row mt-3 w-50 d-flex justify-content-center gap-3" style="flex-wrap: wrap;">
        {{#each porfolio.socialMediaReference}}
            <a target="_blank" href="https://{{this.link}}" class="col-2">
                <img src="{{this.socialMediaReference.icoUrl}}" width="40" alt="{{this.username}}" title="{{this.username}}" />
            </a>
        {{/each}}
    </div>     
        
</div>
