

<div class="modal fade" id="modalSpecialityAdded" tabindex="-1" aria-labelledby="modalSpecialityAddedLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalSpecialityAddedLabel">Agregar especialidad ({{data._count.speciality}})</h1>
            </div>

            <div class="modal-body container-fluid">
                <form action="/doctor/speciality/{{data.id}}" method="POST" class="row">

                    <div class="form-floating col-12 mb-3">
                        <select class="form-control" name="espAdd" id="espAdd1">
                            <option value="" selected>especialidad...</option>
                            {{#each speciality}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="espAdd1">Especialidad</label>
                    </div>

                    <div class="form-floating col-12 mb-3">
                        <select class="form-control" name="universityAdd" id="universityAdd1">
                            <option value="" selected>universidad...</option>
                            {{#each university}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="universityAdd1">Universidad</label>
                    </div>

                    <div class="form-floating col-12 mb-3">
                        <input type="date" class="form-control" name="date" id="date1" />
                        <label for="date">Fecha de egreso</label>
                    </div>

                    <div class="d-flex gap-3 justify-content-end">
                         
                        <button type="submit" class="btn btn-primary">
                            <i class="{{form.submit.ico}}"></i>
                            {{form.submit.text}}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

