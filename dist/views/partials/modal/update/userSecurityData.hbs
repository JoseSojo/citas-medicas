
<div class="modal fade" id="modalSecurityUser" tabindex="-1" aria-labelledby="modalSecurityUser" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalSecurityUser">Actualizar usuario</h1>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                 
            </div>

            <div class="modal-body container-fluid">
                <form action="/user/{{user.id}}/password" method="POST" class="row">

                    <div class="form-floating col-12 mb-3">
                        <input class="form-control" name="password" id="passwordNowInput" type="password" />
                        <input name="currentPassword" type="hidden" value="{{user.password}}" />
                        <label for="passwordNowInput">Contraseña Actual</label>
                    </div>

                    <div class="form-floating col-12 mb-3">
                        <input class="form-control" name="passwordNew" id="passwordNewInput" type="password" />
                        <label for="passwordNewInput">Contraseña Nueva</label>
                    </div>

                    <div class="form-floating col-12 mb-3">
                        <input class="form-control" name="passwordRepeat" id="passwordRepeatInput" type="password" />
                        <label for="passwordRepeatInput">Repetir Contraseña</label>
                    </div>

                    <div class="d-flex gap-3 justify-content-end">
                         
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send-fill"></i>
                            actualizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
