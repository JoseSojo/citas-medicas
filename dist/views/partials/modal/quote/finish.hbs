<div class="modal fade" id="modalFinishQuote" tabindex="-1" aria-labelledby="modalFinishQuoteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalFinishQuoteLabel">Aprobar cita</h1>

                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body container-fluid">
                <form action="/doctor/quote/status/{{data.id}}" method="POST" class="row">

                    <h3 class="text-center">¿Seguro que desea finalizar la cita?</h3>

                    <div class="col-12 mb-3">
                        <label for="starDoctor">Califique al paciente <b id="starDoctorSpace"></b></label>
                        <div class="rating" style=";">
                            <input value="5" name="starDoctor" id="star5" type="radio">
                            <label title="text" for="star5"></label>
                            <input value="4" name="starDoctor" id="star4" type="radio">
                            <label title="text" for="star4"></label>
                            <input value="3" name="starDoctor" id="star3" type="radio">
                            <label title="text" for="star3"></label>
                            <input value="2" name="starDoctor" id="star2" type="radio">
                            <label title="text" for="star2"></label>
                            <input value="1" name="starDoctor" id="star1" type="radio">
                            <label title="text" for="star1"></label>
                        </div>
                        {{!-- <input class="form-control range" name="starDoctor" id="starDoctor" type="range" min="0"
                            max="5" /> 
                            --}}
                    </div>

                    <div class="form-floating col-12 mb-3">
                        <input class="form-control" name="descriptionDoctor" id="descriptionDoctor" type="text"
                            placeholder="" />
                        <label for="descriptionDoctor">Escriba su opinión</label>
                    </div>

                    <input type="hidden" value="FINALIZADO" name="status" />
                    <input type="hidden" value="{{data.quoteDetailReference.id}}" name="currentDetail" />

                    <div class="d-flex gap-3 justify-content-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send-fill"></i>
                            finalizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const input = document.getElementById("starDoctor");
    const space = document.getElementById("starDoctorSpace");

    input.addEventListener(`change`, (ev) => {
        space.textContent = input.value;
    })

</script>