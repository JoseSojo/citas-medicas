
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-between mb-3">
            <h3>Reportes Doctores</h3>
            
        </div>
    </div>
    <div class="row">
        <div class="card">
            <form target="_blank" action="?generate=true" class="card-body">
                <label>Direcci√≥n</label>
                <select name="address" class="form-control">
                    <option selected></option>
                    {{#each addressList}}
                        <option value="{{this.id}}">{{this.description}}</option>
                    {{/each}}
                </select>

                <label>Doctores</label>
                <select name="doctor" class="form-control">
                    <option selected></option>
                    {{#each doctorList}}
                        <option value="{{this.id}}">{{this.name}} {{this.lastname}}</option>
                    {{/each}}
                </select>

                <button type="submit" target="_blank" class="btn btn-primary mt-3">Generar</button>

                {{!-- <a href="" target="_blank" class="btn btn-primary mt-3">Generar</a> --}}
            </form>
        </div>
    </div>
</div>
